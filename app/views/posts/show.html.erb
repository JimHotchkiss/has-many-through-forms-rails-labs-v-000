<h1>Post Show Page </h1>
<h3><%= @post.title %></h3></br>


<% @post.category_ids.each do |category_id| %>
  <%= Category.find(category_id).name%></br>
<% end %>
  <p>
    <%= @post.content %>
  </p>

<%= form_for Comment.new do |f| %>
  <%= f.label :comment%>:
  <%= f.text_field :content%>
  <%= f.submit %>
<% end %>
